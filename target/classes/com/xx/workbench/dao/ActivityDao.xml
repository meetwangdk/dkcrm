<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xx.workbench.dao.ActivityDao">

    <insert id="addActivity" >
        insert into tbl_activity(id,owner,name,startDate,endDate,cost,description,createTime,createBy) VALUES (#{id},#{owner},#{name},#{startDate},#{endDate},#{cost},#{description},#{createTime},#{createBy})
    </insert>

    <select id="selectActivity" resultType="Activity">
        select
        a.id,
        a.name,
        a.startDate,
        u.name as owner,
        a.endDate
        from tbl_activity a
        join tbl_user u
        on a.owner = u.id
        <where>
            <if test="name!=null and name!=''">
                a.name like '%' #{name} '%'
            </if>
            <if test="owner!=null and owner != ''">
               and owner like '%' #{owner} '%'
            </if>
            <if test="startDate !=null and startDate != ''">
              and  startDate &gt;= #{startDate}
            </if>
            <if test="endDate!=null and endDate != ''">
              and  endDate &lt;= #{endDate}
            </if>
        </where>

        order by a.createTime desc
        limit #{startPage},#{pageSize}
    </select>
    <select id="selectCountActivity" resultType="int">
        select
        count(*)
        from tbl_activity a
        join tbl_user u
        on a.owner = u.id
        <where>
            <if test="name!=null and name!=''">
                a.name like '%' #{name} '%'
            </if>
            <if test="owner!=null and owner != ''">
               and owner like '%' #{owner} '%'
            </if>
            <if test="startDate !=null and startDate != ''">
              and  startDate &gt;= #{startDate}
            </if>
            <if test="endDate!=null and endDate != ''">
              and  endDate &lt;= #{endDate}
            </if>
        </where>
    </select>

    <delete id="removeActivityById">
        delete from tbl_activity where id in
        <foreach collection="array" item="id" open="(" close=")"  separator=",">
            #{id}
        </foreach>
    </delete>

    <select id="selectActivityById" resultType="int">
        select count(*) from tbl_activity where id in
        <foreach collection="array" item="id" open="(" close=")"  separator=",">
            #{id}
        </foreach>
    </select>
</mapper>